{
  "compilerOptions": {
    "lib": ["es6"],
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "target": "esnext",
    "jsx": "react",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./example"]
}
